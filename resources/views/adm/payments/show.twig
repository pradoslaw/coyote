{% extends 'adm.base' %}
{% block title %}Szczegóły płatności {{ parent() }}{% endblock %}

{% block panel %}
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Data</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.created_at|format_date }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Status</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment_list[payment.status_id] }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Ilość dni</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.days }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Początek promowania</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.starts_at ? payment.starts_at|format_date : '--' }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Zakończenie promowania</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.ends_at ? payment.ends_at|format_date : '--' }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Nr faktury</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.number|default('--') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Data wystawienia faktury</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.number ? payment.invoice.created_at|format_date : '--' }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Data opłacenia faktury</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.number ? payment.invoice.updated_at|format_date : '--' }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Nazwa firmy</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.name|default('--') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">NIP</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.vat_id|default('--') }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Adres</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.address|default('--') ~ ' ' ~ payment.invoice.postal_code ~ ' ' ~ payment.invoice.city }}</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kwota netto</label>

            <div class="col-sm-10">
                <p class="form-control-static">{{ payment.invoice.net_price }} {{ payment.invoice.currency.symbol }}</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a href="{{ route('adm.payments') }}" class="btn btn-default">Powrót</a>
            </div>
        </div>
    </div>
{% endblock %}

