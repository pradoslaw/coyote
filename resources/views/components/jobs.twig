{% for job in jobs %}
    <div class="media">
        <div class="media-left">
            <a href="{{ route('job.offer', [job.id, job.slug]) }}" title="{{ job.title }}">
                <img class="media-object" src="{{ logo(job.logo) }}" alt="{{ job.firm_name }}">
            </a>
        </div>
        <div class="media-body">
            <h5 class="media-heading"><a href="{{ route('job.offer', [job.id, job.slug]) }}" title="{{ job.title }}">{{ job.title }}</a></h5>
            <p><a class="employer" href="{{ route('job.firm', [job.firm_name]) }}">{{ job.firm_name }}</a></p>

            <p class="bottom">
                {% include 'job.partials.location' with {
                    'locations': job.locations.lists('city'),
                    'separator': false
                } %}

                {% if job.salary_from or job.salary_to %}
                    â€¢ {% include 'job.partials.salary' %}
                {% endif %}
            </p>
        </div>
    </div>
{% endfor %}