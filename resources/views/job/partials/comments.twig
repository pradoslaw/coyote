<div id="comments" v-cloak>
    <h3><i class="fas fa-question-circle-o"></i> Pytania i odpowiedzi</h3>

    <div class="card card-default">

        <div class="card-body">
            <div class="comment">
                <div class="media">
                    <div class="mr-2">
                        <a href="{{ route('profile', [user('id')]) }}">
                            <img src="{{ user_photo(user('photo')) }}" class="img-thumbnail media-object">
                        </a>
                    </div>

                    <div class="media-body">
                        {{ form_open({'v-on:submit.prevent': 'submitForm', url: route('job.comment', {job: job.id}), method: 'post', ref: 'submitForm'}) }}
                            <div class="form-group">
                                <vue-prompt source="{{ route('user.prompt') }}">
                                    <textarea-autosize
                                        placeholder="Zadaj pytanie"
                                        name="text"
                                        class="form-control"
                                        ref="textarea"
                                        v-model="defaultText"
                                        :min-height="40"
                                        :max-height="350"
                                        @focus.native.once="textFocused = true"
                                        @keydown.native.ctrl.enter="submitForm"
                                        rows="1"
                                        tabindex="1"
                                    ></textarea-autosize>
                                </vue-prompt>
                            </div>

                            <div class="row" v-show="textFocused">
                                <div class="col-sm-6">
                                    {% if user('id') == null %}
                                        <input v-model="defaultEmail" type="text" name="email" class="form-control" placeholder="Adres e-mail" tabindex="2">
                                    {% endif %}
                                </div>

                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-sm float-right" tabindex="3" title="Ctrl+Enter aby opublikowaÄ‡">Zapisz</button>
                                </div>
                            </div>
                        {{ form_close() }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div v-if="comments.length > 0" class="card card-default">
        <div class="card-body">
            <vue-comment
                v-for="comment in comments"
                :comment="comment"
                :key="comment.id"
            ></vue-comment>
        </div>
    </div>

    <vue-modal ref="error">
        ${ error }
    </vue-modal>
</div>


